{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "ESNext",
      "ES2020",
      "ES2019",
      "ES2018",
      "ES2017",
      "ES2016",
      "ES2015",
      "DOM"
    ],
    "allowJs": true,
    "rootDir": "./src",
    "declaration": false,
    "removeComments": true,
    "importHelpers": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./tests/",
    "./node_modules/**/*",
    "../../node_modules/**/*",
    "./dist/",
    "./typedoc/",
    "./docs/"
  ],
}
